<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="3dp"
        android:background="@mipmap/china_2" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="325dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="-5dp"
            android:layout_weight="2"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/left_shang1"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="6dp"
                android:scaleType="fitXY" />


            <ImageView
                android:id="@+id/left_xia2"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="6dp"
                android:scaleType="fitXY" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/right_shang3"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:layout_margin="6dp"
                android:scaleType="fitXY" />


            <ImageView
                android:id="@+id/right_zhong4"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:layout_margin="6dp"
                android:scaleType="fitXY" />


            <ImageView
                android:id="@+id/right_xia5"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:layout_margin="6dp"
                android:scaleType="fitXY" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="325dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="-5dp"
            android:layout_weight="2"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/left_shang6"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="6dp"
                android:scaleType="fitXY" />


            <ImageView
                android:id="@+id/left_xia7"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="6dp"
                android:scaleType="fitXY" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/right_shang8"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:layout_margin="6dp"
                android:scaleType="fitXY" />


            <ImageView
                android:id="@+id/right_zhong9"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:layout_margin="6dp"
                android:scaleType="fitXY" />


            <ImageView
                android:id="@+id/right_xia10"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:layout_margin="6dp"
                android:scaleType="fitXY" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
