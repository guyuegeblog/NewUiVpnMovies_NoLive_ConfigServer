<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/top_time"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:visibility="gone"
        android:background="@drawable/tpbg"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/time" />


        <TextView
            android:id="@+id/tv_timer"
            style="@style/fontstyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="试 用 倒 计 时: 1:25"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/top_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:visibility="gone"
        android:background="@drawable/tpbg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/daodu"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_marginLeft="0dp"
            android:layout_weight="1"
            android:src="@drawable/daodu" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3" />


        <ImageView
            android:id="@+id/kefu"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:src="@drawable/kefu" />


    </LinearLayout>


    <com.youth.banner.Banner
        android:id="@+id/banner"
        style="@style/fontstyle"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="-7dp"
        app:delay_time="3000"
        app:image_scale_type="fit_xy"
        app:indicator_drawable_selected="@drawable/selected_radius"
        app:indicator_drawable_unselected="@drawable/unselected_radius"
        app:indicator_height="8dp"
        app:indicator_margin="5dp"
        app:indicator_width="8dp"
        app:title_background="@null"
        app:title_height="30dp"
        app:title_textcolor="@color/white"
        app:title_textsize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="-30dp"
        android:background="@drawable/lb_bt"></LinearLayout>

</LinearLayout>